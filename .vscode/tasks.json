{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: C:/mingw64/bin/g++.exe"
        },
        {
            "type": "shell",
            "label": "C/C++: 删除活动文件",
            "command":"del",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ]
        }
    ]
}